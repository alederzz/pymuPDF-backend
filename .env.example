# Puerto del host (el que usas para conectarte)
HOST_PORT=5001

# Puerto interno del contenedor
CONTAINER_PORT=5000

# Entorno de Flask (production, development)
FLASK_ENV=production

# Tamaño máximo de archivo en bytes (16MB por defecto)
MAX_CONTENT_LENGTH=16777216

# Directorio de uploads dentro del contenedor
UPLOAD_FOLDER=/tmp/uploads

# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Extensiones de archivo permitidas (separadas por coma)
ALLOWED_EXTENSIONS=pdf

# Configuración del health check
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40s